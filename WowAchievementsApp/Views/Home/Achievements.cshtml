@model WowAchievementsApp.Models.AchievementsViewModel
@{
    ViewData["Title"] = "Achievements";
    // Use ViewModel properties
    var characterName = Model?.CharacterName ?? ViewBag.CharacterName as string ?? "Unknown";
    var realmSlug = Model?.RealmSlug ?? ViewBag.RealmSlug as string ?? "unknown";
    var region = Model?.Region ?? ViewBag.Region as string ?? "us";
}

<div class="text-center mb-4">
    <h1 class="display-4">Achievements</h1>
    <p class="text-muted">
        <strong>@characterName</strong> on <strong>@realmSlug</strong> (Region: <strong>@region</strong>)
    </p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Characters</a>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div class="alert alert-danger text-center">
        <p><strong>Error:</strong> @ViewBag.ErrorMessage</p>
    </div>
}

@if (Model != null && Model.CharacterAchievements != null)
{
    <div class="mb-3">
        <h3>Total Achievement Points: <strong>@Model.CharacterAchievements.TotalPoints</strong></h3>
        <p>Total Achievements: <strong>@Model.CharacterAchievements.Achievements.Count</strong></p>
    </div>

    @if (Model.PaginatedAchievements != null && Model.PaginatedAchievements.Count > 0)
    {
        <div class="row mb-2">
            <div class="col-md-12 text-end text-muted">
                Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.CharacterAchievements.Achievements.Count) of @Model.CharacterAchievements.Achievements.Count
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Points</th>
                        <th>Completed</th>
                        <th>Date Completed</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var achievement in Model.PaginatedAchievements)
                    {
                        var isCompleted = achievement.CompletedTimestamp.HasValue || achievement.Criteria?.IsCompleted == true;
                        var completedDate = achievement.CompletedTimestamp.HasValue 
                            ? DateTimeOffset.FromUnixTimeMilliseconds(achievement.CompletedTimestamp.Value).DateTime 
                            : (DateTime?)null;
                        
                        <tr class="@(isCompleted ? "table-success" : "")">
                            <td><strong>@(achievement.AchievementInfo?.Name ?? $"Achievement {achievement.Id}")</strong></td>
                            <td>@(achievement.AchievementInfo?.Description ?? "-")</td>
                            <td>@(achievement.AchievementInfo?.Points?.ToString() ?? "-")</td>
                            <td>
                                @if (isCompleted)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>
                                @if (isCompleted && completedDate.HasValue)
                                {
                                    @completedDate.Value.ToString("yyyy-MM-dd HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        if (Model.TotalPages > 1)
        {
            <nav aria-label="Achievements navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Achievements", new { realmSlug = Model.RealmSlug, characterName = Model.CharacterName, page = Model.CurrentPage - 1 })" tabindex="-1">Previous</a>
                    </li>
                    
                    @* Show simplified pagination for large number of pages *@
                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Achievements", new { realmSlug = Model.RealmSlug, characterName = Model.CharacterName, page = i })">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Achievements", new { realmSlug = Model.RealmSlug, characterName = Model.CharacterName, page = Model.CurrentPage + 1 })">Next</a>
                    </li>
                </ul>
            </nav>
            <div class="text-center text-muted small">
                Page @Model.CurrentPage of @Model.TotalPages
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            <p>No achievements found for this character.</p>
        </div>
    }
}
else
{
    <div class="alert alert-warning text-center">
        <p>Unable to load achievements. Please try again later.</p>
        @if (ViewBag.ErrorMessage != null)
        {
            <p class="small text-muted mt-2">@ViewBag.ErrorMessage</p>
        }
    </div>
}

